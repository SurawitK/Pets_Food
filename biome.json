{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ],
    "rules": {
      "recommended": true,
      "complexity": {
        "all": true,
        "noVoid": "error",
        "useSimplifiedLogicExpression": "error",
        "noExcessiveCognitiveComplexity": "error"
      },
      "correctness": {
        "all": true,
        "noNewSymbol": "error",
        "noUnusedImports": "error",
        "useHookAtTopLevel": "error",
        "noUndeclaredVariables": "error"
      },
      "performance": { "recommended": true },
      "a11y": { "all": true },
      "security": {
        "recommended": true
      },
      "style": {
        "all": true,
        "noDefaultExport": "error",
        "noImplicitBoolean": "error",
        "noNamespace": "warn",
        "noNamespaceImport": "warn",
        "noShoutyConstants": "warn",
        "useBlockStatements": "warn",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": "error",
        "useShorthandArrayType": "error",
        "useFilenamingConvention": "warn",
        "useForOf": "warn",
        "useShorthandAssign": "warn",
        "useSingleCaseStatement": "error",
        "useNamingConvention": "error"
      },
      "suspicious": {
        "recommended": true,
        "noConsoleLog": "warn",
        "useAwait": "warn",
        "noEmptyBlockStatements": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingComma": "all",
      "indentStyle": "space",
      "indentWidth": 2,
      "bracketSameLine": false
    }
  },
  "files": {
    "include": [
      "src/**/*.{ts,tsx,js,jsx}",
      "lib/**/*.{ts,tsx,js,jsx}",
      "./biome.json",
      "./package.json",
      "./tsconfig.json",
      "./vite.config.{ts,jx}"
    ],
    "ignore": ["node_modules", "**/node_modules/**", "dist", "bin"],
    "ignoreUnknown": true
  }
}
